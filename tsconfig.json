{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src",
        "baseUrl": "./",
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": false,
        "noImplicitAny": true,
        "paths": {
            "@/*": ["src/*"]
            // "@utils/*": ["src/utils/*"],
            // "@components/*": ["src/components/*"],
            // "@services/*": ["src/services/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
